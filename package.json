{
  "name": "verifiablecredentials-crypto-sdk-typescript",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/VerifiableCredentials-Crypto-SDK-Typescript.git"
  },
  "description": "SDK for managing keys and plugeable crypto in the DID space.",
  "keywords": [
    "Decentralized Identity",
    "Verifiable Credentials",
    "DID",
    "crypto",
    "JOSE",
    "JWE",
    "JWS",
    "JWT"
  ],
  "author": "Microsoft Corporation",
  "license": "MIT",
  "main": "./dist/lib/index.js",
  "scripts": {
    "build": "tsc --p tsconfig.json",
    "test": "nyc jasmine-ts --config=./tests/jasmine.json",
    "lint": "tslint --fix --project . --config ./tslint.json",
    "lint-pr": "tslint --project . --config ./tslint.json"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.9",
    "jasmine": "^3.2.0",
    "jasmine-reporters": "^2.3.2",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.3.0",
    "nyc": "14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "8.5.4",
    "tslint": "^5.20.0",
    "typescript": "3.9.2"
  },
  "dependencies": {
    "@azure/identity": "1.0.0",
    "verifiablecredentials-crypto-sdk-typescript-keys": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-keystore": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-plugin": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-plugin-elliptic": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-plugin-factory": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-plugin-keyvault": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-protocol-jose": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-protocols-common": "1.1.0",
    "verifiablecredentials-crypto-sdk-typescript-plugin-cryptofactory-suites": "1.1.0",
    "@types/node": "12.12.16",
    "webcrypto-core": "1.1.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  }
}
